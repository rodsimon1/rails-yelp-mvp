<h1>Add a new restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name  %>
  <%= f.input :address  %>
  <%= f.input :category  %>
  <%= f.input :phone_number  %>

  <i class="fas fa-plus"></i><%= f.submit class: 'btn btn-success' %>
<% end %>

<p> <i class="fas fa-undo-alt"><%= link_to 'Go back', restaurants_path, class: 'btn btn-primary' %></i></p>
